<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johanmorales.colorweatherapp.HourlyForecastActivity"
    android:background="@drawable/bg_gradient_color">

    <TextView
        android:id="@+id/hourlyForecastTitleTextView"
        style="@style/mainStyleColorWeatherApp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/hourly_forecast" />

    <ListView
        android:id="@+id/hourlyListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hourlyForecastTitleTextView"
        android:layout_centerHorizontal="true"
        android:divider="@null"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/emptyTextView"
        style="@style/mainStyleColorWeatherApp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_hay_datos_que_mostrar" />
</RelativeLayout>
