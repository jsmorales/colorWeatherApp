<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyWeatherActivity"
    android:background="@drawable/bg_gradient_color">

    <TextView
        android:id="@+id/MinutelyWeatherTitleTextView"
        style="@style/mainStyleColorWeatherApp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/daily_forecast" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/MinutelyWeatherTitleTextView"
        android:layout_centerHorizontal="true"
        android:divider="@null"
        android:dividerHeight="12dp"
        android:padding="10dp"/>

    <TextView
        android:id="@android:id/empty"
        style="@style/mainStyleColorWeatherApp"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:text="@string/no_hay_datos_que_mostrar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</RelativeLayout>